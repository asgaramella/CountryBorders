<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111" fx:controller="it.polito.tdp.country.ContryController">
   <top>
      <Label text="Country borders" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label text="Stato di partenza:" />
                  <ComboBox fx:id="boxPartenza" prefWidth="150.0" />
                  <Button fx:id="btnRaggiungibili" mnemonicParsing="false" onAction="#handleRaggiungibili" text="Cerca raggiungibili" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Stato di destinazione:" />
                  <ComboBox fx:id="boxDestinazione" prefWidth="150.0" />
                  <Button fx:id="btnPercorsi" mnemonicParsing="false" onAction="#handlePercorso" text="Cerca percorso" />
               </children>
            </HBox>
            <TextArea fx:id="txtResult" editable="false" />
         </children>
      </VBox>
   </center>
</BorderPane>
